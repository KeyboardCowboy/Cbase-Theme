name = CBase
description = Base theme to support simple sub-theme implementation, functionality and settings.
core = 7.x
version = 7.x-2.0-beta2
screenshot  = screenshot.jpg
engine = phptemplate

; Stylesheets
stylesheets[all][] = css/cbase.reset.css
stylesheets[all][] = css/cbase.base.css
stylesheets[all][] = css/cbase.messages.css

; Scripts
scripts[] = js/scrollTo-1.4.2.js
scripts[] = js/localscroll-1.2.7.js
scripts[] = js/cbase.js

; Theme Settings
settings[cbase_localscroll] = 1
settings[unpublished_indicator] = 'unpublished'
settings[cbase_css][] = cbase.base.css
settings[cbase_css][] = cbase.reset.css
settings[cbase_css][] = cbase.messages.css
settings[cbase_css][] = system.base.css
settings[cbase_css][] = system.menus.css
settings[cbase_css][] = system.messages.css
settings[cbase_css][] = system.theme.css
